# Staging Environment Configuration
ENV=staging

# App Settings
APP_NAME=peerprep-question-service
HOST=0.0.0.0
PORT=8003

# Database Settings (Question Service - Isolated Database)
DB_HOST=${POSTGRES_HOST:-staging-postgres.internal}
DB_PORT=5432
DB_USER=peerprep_staging
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_NAME=peerprep_questions

# Staging databases: peerprep_questions_staging, peerprep_questions_staging_test
# Uses production-like setup but separate databases

# JWT Settings (staging-specific secrets)
JWT_SECRET=${JWT_SECRET}
JWT_ALG=HS256

# CORS (staging domains)
ALLOWED_ORIGINS=https://staging.peerprep.com,http://localhost:3000